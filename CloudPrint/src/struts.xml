<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="false" />
	<constant name="struts.objectFactory" value="spring" />

    <package name="admin" namespace="/admin" extends="struts-default">
		<action name="authorize" class="cn.edu.tongji.sse.action.AdminAction" method="authorize">
            <result>/index.html</result>
            <result name="error">/index.html</result>
        </action>
        
        <action name="login" class="cn.edu.tongji.sse.action.AdminAction" method="login">
        	<result name="success" type="redirect">    
            
              https://accounts.google.com/o/oauth2/auth?response_type=code&amp;scope=https://www.googleapis.com/auth/cloudprint&amp;redirect_uri=http://localhost:8080/CloudPrint/admin/authorize&amp;client_id=${client.clientId}&amp;approval_prompt=force
              
  
            </result>
        </action>
        
    </package>
    
    
	<package name="user" namespace="/" extends="struts-default">
	<interceptors>
		<interceptor name="sessionUser" class="cn.edu.tongji.sse.interceptor.UserSessionInterceptor" />
				
	
		<interceptor-stack name="sessionStack">
			<interceptor-ref name="exception" />
			<interceptor-ref name="servletConfig" />
			<interceptor-ref name="sessionUser" />
			<interceptor-ref name="modelDriven" />
			

			<interceptor-ref name="actionMappingParams" />
			<interceptor-ref name="params">
				<param name="excludeParams">dojo\..*,^struts\..*</param>
			</interceptor-ref>
			<interceptor-ref name="conversionError" />

		</interceptor-stack>
	</interceptors>
	
		<default-interceptor-ref name="sessionStack"/>
	
		<action name="login" class="cn.edu.tongji.sse.action.UserAction" method="login">
            <result type="redirectAction">home</result>
            <result name="input">/jsp/login.jsp</result>
        </action>
	
		<action name="register" class="cn.edu.tongji.sse.action.UserAction" method="register">
            <result type="redirectAction">home</result>
            <result name="input">/jsp/login.jsp</result>
        </action>
        
        <action name="logout" class="cn.edu.tongji.sse.action.UserAction" method="logout">
            <result type="redirectAction">login</result>
            
        </action> 
        
        <action name="home" class="cn.edu.tongji.sse.action.UserAction" method="home">
            <result>/jsp/home.jsp</result>
            <result name="input" type="redirectAction">login</result>
        </action> 
	
		
	</package>
    
    


    <!-- Add packages here -->
    <package name="shop" namespace="/shop" extends="struts-default">
    <interceptors>
    	<interceptor name="sessionUser" class="cn.edu.tongji.sse.interceptor.UserSessionInterceptor" />
    
		<interceptor-stack name="sessionStack">
			<interceptor-ref name="exception" />
			<interceptor-ref name="servletConfig" />
			<interceptor-ref name="sessionUser" />
			<interceptor-ref name="modelDriven" />
			

			<interceptor-ref name="actionMappingParams" />
			<interceptor-ref name="params">
				<param name="excludeParams">dojo\..*,^struts\..*</param>
			</interceptor-ref>
			<interceptor-ref name="conversionError" />

		</interceptor-stack>
	</interceptors>
    
    <default-interceptor-ref name="sessionStack"/>
    	<action name="list" class="cn.edu.tongji.sse.action.ShopAction" method="list">
    		<result>/jsp/guestCenter.jsp</result>
    	</action>
    
		<action name="home" class="cn.edu.tongji.sse.action.ShopAction" method="home">
            <result>/jsp/shopCenter.jsp</result>
            <result name="input" type="redirectAction">
    			<param name="actionName">login</param>
    			<param name="namespace">..</param>
			</result>
        </action>
	
		<action name="open" class="cn.edu.tongji.sse.action.ShopAction" method="open">
            <result type="redirectAction">list</result>
            
            <result name="input" type="redirectAction">
    			<param name="actionName">login</param>
    			<param name="namespace">..</param>
			</result>
        </action>
        
        <action name="auth" class="cn.edu.tongji.sse.action.ShopAction" method="auth">
            <result type="redirect">
            	https://accounts.google.com/o/oauth2/auth?response_type=code&amp;scope=https://www.googleapis.com/auth/cloudprint&amp;redirect_uri=http://localhost:8080/CloudPrint/shop/token&amp;client_id=${client.clientId}&amp;approval_prompt=force              
            </result>
            
            <result name="input" type="redirectAction">
    			<param name="actionName">login</param>
    			<param name="namespace">..</param>
			</result>
        </action>
	
		<action name="token" class="cn.edu.tongji.sse.action.ShopAction" method="token">
			<result name="success" type="redirectAction">
    			home
			</result>
			<result name="input" type="redirectAction">
    			<param name="actionName">login</param>
    			<param name="namespace">..</param>
			</result>
			<result name="error" type="redirectAction">
    			home
			</result>
		</action>
		
		
	
	</package>
    
    <package name="task" namespace="/task" extends="struts-default">
    <interceptors>
    	<interceptor name="sessionUser" class="cn.edu.tongji.sse.interceptor.UserSessionInterceptor" />
    
		<interceptor-stack name="sessionStack">
			<interceptor-ref name="exception" />
			<interceptor-ref name="servletConfig" />
			<interceptor-ref name="sessionUser" />
			<interceptor-ref name="modelDriven" />
			

			<interceptor-ref name="actionMappingParams" />
			<interceptor-ref name="params">
				<param name="excludeParams">dojo\..*,^struts\..*</param>
			</interceptor-ref>
			<interceptor-ref name="conversionError" />

		</interceptor-stack>
	</interceptors>
    
    <default-interceptor-ref name="sessionStack"/>
    
    	<action name="submit" class="cn.edu.tongji.sse.action.TaskAction" method="submit">
			<result name="success" type="redirectAction">
    			home
			</result>
			<result name="input" type="redirectAction">
    			<param name="actionName">login</param>
    			<param name="namespace">..</param>
			</result>
			<result name="error" type="redirectAction">
    			home
			</result>
		</action>
    
    </package>

</struts>