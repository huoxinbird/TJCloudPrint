<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="false" />
	<!-- <constant name="struts.objectFactory" value="spring" /> -->

    <package name="admin" namespace="/admin" extends="struts-default">
		<action name="authorize" class="cn.edu.tongji.sse.action.AdminAction" method="authorize">
            <result>/index.html</result>
            <result name="error">/index.html</result>
        </action>
        
        <action name="login" class="cn.edu.tongji.sse.action.AdminAction" method="login">
        	<result name="success" type="redirect">    
            
              https://accounts.google.com/o/oauth2/auth?response_type=code&amp;scope=https://www.googleapis.com/auth/cloudprint&amp;redirect_uri=http://localhost:8080/CloudPrint/admin/authorize&amp;client_id=${client.clientId}&amp;approval_prompt=force
              
  
            </result>
        </action>
        
    </package>

    

    <!-- Add packages here -->

</struts>